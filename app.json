{
  "expo": {
    "name": "Св. Наум Охридски • Триенген",
    "slug": "sv-naum-calendar",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/iconnew.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#831B26"
    },
    "ios": {
      "bundleIdentifier": "com.svnaum.calendar",
      "buildNumber": "10",
      "supportsTablet": true,
      "infoPlist": {
        "NSUserNotificationsUsageDescription": "We send notifications about church services and important events.",
        "NSPhotoLibraryUsageDescription": "Allow access to your photo library to upload images for church events.",
        "NSCameraUsageDescription": "Allow camera access to take photos for church events.",
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.svnaum.calendar",
      "versionCode": 10,
      "adaptiveIcon": {
        "foregroundImage": "./assets/iconnew.png",
        "backgroundColor": "#831B26"
      },
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "ca6379d4-2b7a-4ea3-8aba-3a23414ae7cb"
      }
    },
    "owner": "mpc_triengen_sv_naum",
    "plugins": [
      "expo-font",
      "expo-build-properties",
      [
        "expo-image-picker",
        {
          "photosPermission": "Дозволете пристап до галеријата за прикачување слики.",
          "cameraPermission": "Дозволете пристап до камерата за снимање фотографии."
        }
      ]
    ]
  }
}
